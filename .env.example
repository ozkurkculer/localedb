# --- World Bank ---
# URL for Population CSV
WB_POPULATION_URL=https://api.worldbank.org/v2/en/indicator/SP.POP.TOTL?downloadformat=csv
# Note: The zip contains multiple files, we need to match the filename pattern.
WB_POPULATION_CSV_PATTERN=API_SP.POP.TOTL_DS2_en_csv_v2_*.csv
WB_METADATA_CSV_PATTERN=Metadata_Country_API_SP.POP.TOTL_DS2_en_csv_v2_*.csv

# --- Mledoze ---
MLEDOZE_COUNTRIES_URL=https://raw.githubusercontent.com/mledoze/countries/master/countries.json

# --- Airports ---
AIRPORTS_CSV_URL=https://raw.githubusercontent.com/ip2location/ip2location-iata-icao/master/iata-icao.csv
AIRPORTS_JSON_URL=https://raw.githubusercontent.com/mwgg/Airports/master/airports.json

# --- SimpleLocalize ---
SL_COUNTRIES_URL=https://cdn.simplelocalize.io/public/v1/countries
SL_LANGUAGES_URL=https://cdn.simplelocalize.io/public/v1/languages
SL_LOCALES_URL=https://cdn.simplelocalize.io/public/v1/locales

# --- CLDR ---
# Set to 'latest' to auto-fetch from GitHub, or specific tag like '44.0.0' or 'release-44'
CLDR_VERSION=latest
CLDR_REPO=unicode-org/cldr-json
CLDR_PACKAGES=cldr-core,cldr-dates-full,cldr-localenames-full,cldr-misc-full,cldr-numbers-full,cldr-units-full

# --- ICU ---
# Set to 'latest' to auto-fetch from GitHub, or specific tag
ICU_VERSION=latest
ICU_REPO=unicode-org/icu
ICU_PATHS=region,lang,curr,zone
